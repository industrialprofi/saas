<%# Добавляем сообщение пользователя в чат %>
<%= turbo_stream.append "messages" do %>
  <%= render "messages/message", message: @message %>
<% end %>

<%# Добавляем ответ AI в чат %>
<%= turbo_stream.append "messages" do %>
  <%= render "messages/message", message: @ai_message %>
<% end %>

<%# Сбрасываем форму %>
<%= turbo_stream.replace "message_form" do %>
  <%= render "messages/form", message: Message.new %>
<% end %>

<%# Обновляем счётчик квоты %>
<%= turbo_stream.replace "quota_counter" do %>
  <%= render "shared/quota_counter" %>
<% end %>
