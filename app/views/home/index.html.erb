<!-- Header -->
<header class="bg-white dark:bg-gray-900">
  <%= render partial: 'shared/navbar' %>
</header>

<!-- Основной контент -->
<main class="bg-white dark:bg-gray-900 py-8">
  <div class="max-w-screen-xl mx-auto px-4">
    <h1 class="mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Общайтесь с <span class="text-blue-600 dark:text-blue-500">искусственным интеллектом</span> прямо сейчас</h1>
    <p class="mb-8 text-lg font-normal text-gray-500 lg:text-xl dark:text-gray-400">Задавайте вопросы, получайте ответы и решайте задачи с помощью нашего AI-ассистента.</p>
    
    <!-- Чат с AI -->
    <div class="w-full max-w-4xl mx-auto bg-white rounded-lg shadow-md dark:bg-gray-800 p-4 mb-8">
      <!-- Заголовок чата -->
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white">Чат с AI</h2>
        <span class="bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Онлайн</span>
      </div>
      
      <!-- Сообщения чата -->
      <div id="messages" class="space-y-4 mb-4 h-96 overflow-y-auto p-4 bg-gray-50 dark:bg-gray-700 rounded-lg" data-controller="chat-scroll">
        <% if Message.count == 0 %>
          <!-- Приветственное сообщение, если нет других сообщений -->
          <% welcome_message = Message.create(content: "Привет! Я ваш AI-ассистент. Чем я могу вам помочь сегодня?", user_type: "ai") %>
          <%= render "messages/message", message: welcome_message %>
        <% else %>
          <!-- Отображаем последние 20 сообщений -->
          <% Message.ordered.last(20).each do |message| %>
            <%= render "messages/message", message: message %>
          <% end %>
        <% end %>
      </div>

      <!-- Форма отправки сообщения -->
      <%= render "messages/form", message: Message.new %>

      <!-- Daily requests counter for any signed-in user -->
      <% if user_signed_in? %>
        <%= render "shared/quota_counter" %>
      <% end %>
    </div>

    <!-- Upgrade Note -->
    <%= render "shared/upgrade_note" %>

  </div>
</main>

