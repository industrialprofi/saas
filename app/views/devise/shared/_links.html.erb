<%- if controller_name != 'sessions' %>
  <%= link_to 'Войти', new_session_path(resource_name), class: 'text-blue-600 hover:underline dark:text-blue-400' %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to 'Зарегистрироваться', new_registration_path(resource_name), class: 'text-blue-600 hover:underline dark:text-blue-400' %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to 'Забыли пароль?', new_password_path(resource_name), class: 'text-blue-600 hover:underline dark:text-blue-400' %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to 'Не получили инструкции по подтверждению?', new_confirmation_path(resource_name), class: 'text-blue-600 hover:underline dark:text-blue-400' %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to 'Не получили инструкции по разблокировке?', new_unlock_path(resource_name), class: 'text-blue-600 hover:underline dark:text-blue-400' %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% if provider.to_s == 'telegram' %>
      <%= button_to 'Войти через Telegram', main_app.user_telegram_omniauth_authorize_path, method: :post, data: { turbo: false }, class: 'mt-2 inline-flex items-center justify-center gap-2 rounded-lg bg-sky-500 hover:bg-sky-600 text-white font-medium px-4 py-2 focus:outline-none focus:ring-4 focus:ring-sky-300 dark:focus:ring-sky-800' %><br />
    <% else %>
      <%= button_to "Войти через #{OmniAuth::Utils.camelize(provider)}", '#', disabled: true, class: 'opacity-60 cursor-not-allowed mt-2 inline-flex items-center justify-center rounded-lg px-4 py-2' %><br />
    <% end %>
  <% end %>
<% end %>
