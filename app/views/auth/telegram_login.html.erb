<% content_for :title, 'Войти с Telegram' %>

<!-- Header -->
<header class="bg-white dark:bg-gray-900">
  <%= render partial: 'shared/navbar' %>
</header>

<main class="min-h-[70vh] bg-gray-50 dark:bg-gray-900 py-12">
  <div class="mx-auto max-w-md px-4">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-extrabold tracking-tight text-gray-900 dark:text-white">Войти с Telegram</h1>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 space-y-6">
      <!-- Telegram Login Widget -->
      <div class="flex justify-center">
        <script
          async
          src="https://telegram.org/js/telegram-widget.js?22"
          data-telegram-login="dreamteamsaasbot"
          data-size="large"
          data-radius="8"
          data-auth-url="https://5430b36c0e55.ngrok-free.app/users/auth/telegram/callback"
          data-request-access="write">
        </script>
      </div>

      <p class="text-center text-sm text-gray-600 dark:text-gray-400">Или <%= link_to 'войти с Email', new_user_session_path, class: 'text-blue-600 hover:underline dark:text-blue-400' %></p>
    </div>
  </div>
</main>
